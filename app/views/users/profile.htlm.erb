<div class="confirm splash">
	<div class="confirm align">
		
		<div class="lead">
			
			<p id='message-center'>Enter your pin below or click 'Receive Pin' to be texted a new one.</p>
		
		</div>
		
		<form class='pure-form pure-form-stacked' id="submit-pin" action='/users/<%= @user.id %>/confirm' method="post">
			
			<input id="pin" type="text" name="pin" placeholder="Enter your pin" maxlength="4" autofocus>
			
			<input class="pure-button cta" type="submit" value="Submit Pin">
		
		</form>
		
		<form id='receive-pin' action="/users/<%= @user.id %>/code" method="post">

			<input class="hidden" type="text" value="<%= @user.id %>" name="id">

			<input class="pure-button cta" type="submit" value="Receive Pin">
		
		</form>

	</div>
</div>